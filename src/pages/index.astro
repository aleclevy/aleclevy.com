---
import Hero from "@/components/landing/Hero.astro";
import Work from "@/components/landing/Work.astro";
import Intro from "@/components/landing/Intro.astro";
import Cta from "@/components/landing/Cta.astro";
import BaseHead from "@/components/BaseHead.astro";
import Navigation from "@/components/global/Navigation.astro";
import Footer from "@/components/global/Footer.astro";
---

<html lang="en" class="scroll-smooth">
  <head><BaseHead /></head>

  <body class="bg-black text-white overflow-x-hidden">
    <Navigation />

    <!-- Snap scroll container -->
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center justify-center">
      <Hero />
    </section>

    <!-- Introduction Section -->
    <section class="relative min-h-screen flex items-center">
      <Intro />
    </section>

    <!-- Work Section -->
    <section class="relative min-h-screen flex items-center py-24">
      <Work />
    </section>

    <!-- CTA Section -->
    <section class="relative min-h-screen flex items-center">
      <Cta />
    </section>

    <!-- Footer -->
    <section class="relative">
      <Footer />
    </section>

    <style>
      /* Main gradient background - tan to black */
      body {
        background: linear-gradient(
          180deg,
          #d2b48c 0%,
          #c19a6b 20%,
          #8b6839 40%,
          #4a3a28 60%,
          #1a1410 80%,
          #000000 100%
        );
        background-attachment: fixed;
      }

      /* Snap scrolling setup */
      .snap-container {
        height: 100vh;
        overflow-y: scroll;
        scroll-snap-type: y mandatory;
        scroll-behavior: smooth;
      }

      .snap-section {
        scroll-snap-align: start;
        scroll-snap-stop: always;
        position: relative;
        width: 100%;
      }

      /* Section backgrounds with subtle glass effect */
      .snap-section::before {
        content: "";
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(1px);
        z-index: -1;
      }

      /* Hide scrollbar but keep functionality */
      .snap-container {
        scrollbar-width: thin;
        scrollbar-color: rgba(255, 107, 53, 0.5) transparent;
      }

      .snap-container::-webkit-scrollbar {
        width: 8px;
      }

      .snap-container::-webkit-scrollbar-track {
        background: transparent;
      }

      .snap-container::-webkit-scrollbar-thumb {
        background: rgba(255, 107, 53, 0.5);
        border-radius: 4px;
      }

      .snap-container::-webkit-scrollbar-thumb:hover {
        background: rgba(255, 107, 53, 0.7);
      }

      /* Subtle background accents */
      .accent-shape {
        position: fixed;
        border-radius: 50%;
        filter: blur(80px);
        opacity: 0.1;
        pointer-events: none;
      }

      .accent-1 {
        width: 300px;
        height: 300px;
        background: #ff6b35;
        top: 10%;
        left: -150px;
      }

      .accent-2 {
        width: 400px;
        height: 400px;
        background: #d2b48c;
        top: 50%;
        right: -200px;
      }

      .accent-3 {
        width: 350px;
        height: 350px;
        background: #ff6b35;
        bottom: 10%;
        left: 50%;
        transform: translateX(-50%);
      }
    </style>

    <!-- Subtle background accents -->
    <div class="accent-shape accent-1"></div>
    <div class="accent-shape accent-2"></div>
    <div class="accent-shape accent-3"></div>
  </body>
</html>
