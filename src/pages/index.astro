---
import Hero from "@/components/landing/Hero.astro";
import Work from "@/components/landing/Work.astro";
import Intro from "@/components/landing/Intro.astro";
import Cta from "@/components/landing/Cta.astro";
import BaseHead from "@/components/BaseHead.astro";
import Navigation from "@/components/global/Navigation.astro"
---

<html lang="en" class="selection:bg-orange selection:text-white">
  <head><BaseHead /></head>

  <body>
    <Navigation/>

    <article class="scroll-wrapper">
      <section class="scroll-section">
        <Hero />
        <Intro />

      </section>
      <section class="scroll-section">
        <Work />
      </section>
      <section class="scroll-section">
      </section>
      <section class="scroll-section">
        <Cta />
      </section>

      <style>
        .scroll-wrapper {
          height: 100vh;
          height: 100dvh;
          overflow-y: scroll;
          scroll-snap-type: y mandatory;
        }
        .scroll-section {
          height: 100%;
          background-color: #577;
          scroll-snap-align: start;
          &:nth-child(1) {
            background-color: #ebe2cc;
          }
          &:nth-child(2) {
            background: #ebe2cc;
            background: -webkit-linear-gradient(
              180deg,
              rgba(235, 226, 204, 1) 0%,
              rgba(212, 207, 194, 1) 56%,
              rgba(188, 183, 172, 1) 77%,
              rgba(125, 121, 114, 1) 100%
            );
            background: -moz-linear-gradient(
              180deg,
              rgba(235, 226, 204, 1) 0%,
              rgba(212, 207, 194, 1) 56%,
              rgba(188, 183, 172, 1) 77%,
              rgba(125, 121, 114, 1) 100%
            );
            background: linear-gradient(
              180deg,
              rgba(235, 226, 204, 1) 0%,
              rgba(212, 207, 194, 1) 56%,
              rgba(188, 183, 172, 1) 77%,
              rgba(125, 121, 114, 1) 100%
            );
            filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#EBE2CC", endColorstr="#7D7972", GradientType=0);
          }
          &:nth-child(3) {
            background: #7d7972;
            background: -webkit-linear-gradient(
              180deg,
              rgba(125, 121, 114, 1) 0%,
              rgba(30, 30, 30, 1) 77%
            );
            background: -moz-linear-gradient(
              180deg,
              rgba(125, 121, 114, 1) 0%,
              rgba(30, 30, 30, 1) 77%
            );
            background: linear-gradient(
              180deg,
              rgba(125, 121, 114, 1) 0%,
              rgba(30, 30, 30, 1) 77%
            );
            filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#7D7972", endColorstr="#1E1E1E", GradientType=0);
          }
          &:nth-child(4) {
            background-color: #1e1e1e;
          }
        }
      </style>
    </article>
  </body>
</html>
