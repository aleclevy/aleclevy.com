<section class="border-b border-black bg-accent-500">
  <div class="mx-auto max-w-7xl border-x border-black px-8 py-12 gradient-grid">
    <div class="mx-auto">
      <h1 class="text-7xl font-display text-black uppercase">My Latest Work </h1>
    </div>
  </div>
</section>
<section class="border-b border-black bg-accent-500">
  <div
    class="mx-auto max-w-7xl border-black border-x"
    x-data="{ 
      init() {
        new Splide(this.$refs.splide, {
          perPage: 5,
          gap: '0rem',
          breakpoints: {
            640: {
              perPage: 1,
            },
          },
        }).mount()
      },
      selectedProject: null,
      showModal: false
    }"
  >
    <section
      class="splide is-initialized splide--slide splide--ltr splide--draggable is-active"
      aria-label="Splide/Alpine.js"
      x-ref="splide"
      id="splide01"
      aria-roledescription="carousel"
    >
      <div class="splide__arrows splide__arrows--ltr items-center">
        <button
          class="splide__arrow splide__arrow--prev"
          type="button"
          aria-label="Previous slide"
          aria-controls="splide01-track"
          ><svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 40 40"
            width="40"
            height="40"
            focusable="false"
            ><path
              d="m15.5 0.932-4.3 4.38 14.5 14.6-14.5 14.5 4.3 4.4 14.6-14.6 4.4-4.3-4.4-4.4-14.6-14.6z"
            ></path></svg
          ></button
        >
        <button
          class="splide__arrow splide__arrow--next"
          type="button"
          disabled=""
          aria-label="Next slide"
          aria-controls="splide01-track"
          ><svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 40 40"
            width="40"
            height="40"
            focusable="false"
            ><path
              d="m15.5 0.932-4.3 4.38 14.5 14.6-14.5 14.5 4.3 4.4 14.6-14.6 4.4-4.3-4.4-4.4-14.6-14.6z"
            ></path></svg
          ></button
        >
      </div>
      <div
        class="h-full splide__track splide__track--slide splide__track--ltr splide__track--draggable"
        id="splide01-track"
        style="padding-left: 0px; padding-right: 0px;"
        aria-live="polite"
        aria-atomic="true"
        aria-busy="false"
      >
        <ul
          class="splide__list"
          id="splide01-list"
          role="presentation"
          style="transform: translateX(-2040px);"
        >
          <li
            class="flex justify-center flex-col splide__slide"
            @click="selectedProject = 1; showModal = true"
            role="button"
            class="cursor-pointer"
          >
            <img
              alt="work"
              class="w-full object-cover object-center bg-white border-t border-black lg:border-r"
              src="./public/work/DIRTVIZ_PROJ.svg"
              />
            <div
              class="text-white text-xs order-first p-3 text-center lg:border-r lg:border-white/20"
            >
              <span class="block font-semibold">DirtViz</span>
            </div>
          </li>
          <li
            class="flex justify-center flex-col splide__slide"
            @click="selectedProject = 2; showModal = true"
            role="button"
            class="cursor-pointer"
          >
            <img
              alt="work"
              class="w-full object-cover object-center bg-white border-t border-black lg:border-r"
              src="./public/work/2.png"
            />
            <div
              class="text-white text-xs order-first p-3 text-center lg:border-r lg:border-white/20"
            >
              <span class="block font-semibold">Project 2</span>
            </div>
          </li>
          <li
            class="flex justify-center flex-col splide__slide"
            @click="selectedProject = 3; showModal = true"
            role="button"
            class="cursor-pointer"
          >
            <img
              alt="work"
              class="w-full object-cover object-center bg-white border-t border-black lg:border-r"
              src="./public/work/3.png"
            />
            <div
              class="text-white text-xs order-first p-3 text-center lg:border-r lg:border-white/20"
            >
              <span class="block font-semibold">Project 3</span>
            </div>
          </li>
          <li
            class="flex justify-center flex-col splide__slide"
            @click="selectedProject = 4; showModal = true"
            role="button"
            class="cursor-pointer"
          >
            <img
              alt="work"
              class="w-full object-cover object-center bg-white border-t border-black lg:border-r"
              src="/work/4.png"
            />
            <div
              class="text-white text-xs order-first p-3 text-center lg:border-r lg:border-white/20"
            >
              <span class="block font-semibold">Project 4</span>
            </div>
          </li>

         
        </ul>
      </div>
    </section>

    <!-- Modal Template -->
    <div
      x-show="showModal"
      x-transition
      class="fixed inset-0 z-50 flex items-center justify-center p-4 bg-black/80"
      @click.self="showModal = false"
    >
      <div
        class="bg-white rounded-lg max-w-3xl w-full max-h-[90vh] overflow-y-auto p-6"
      >
        <div class="flex justify-between items-center mb-4">
          </h3>
          <button
            @click="showModal = false"
            class="text-gray-500 hover:text-gray-700"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>

        <!-- Project Content -->
        <div>
          <template x-if="selectedProject === 1">
            <div class="space-y-4">
              <div class="grid grid-cols-2 gap-4">
                <img
                  src="/work/DIRTVIZ_PROJ.svg"
                  alt="DirtViz"
                  class="w-full rounded"
                />
              </div>
              <div class="prose max-w-none">
                <h4 class="text-xl font-semibold">DirtViz</h4>
                <p>
                  DirtViz is a hardware and software ecosystem tailored for outdoor sensor networks. Our hardware component, the EnTS Node, collects data from sensor measurements in the field. Our data ingestion and visualization backend, the EnTs Backend, receives data from the hardware nodes and presents it in an easy-to-use web interface that allows users to dynamically generate plots, or download data for offline processing. We have deployed a number of sensors measuring qualities like soil moisture, temperature, current and voltage in outdoors settings.


                </p>
                <div class="flex gap-4 mt-4">
                  <a href="https://dirtviz.jlab.ucsc.edu" target="_blank" class="text-blue-600 hover:underline">View Live</a
                  >
                  <a href="https://github.com/jlab-sensing/ENTS-backend" target="_blank" class="text-blue-600 hover:underline">GitHub</a>
                </div>
              </div>
            </div>
          </template>
          <template x-if="selectedProject === 2">
            <div class="space-y-4">
              <div class="grid grid-cols-2 gap-4">
                <img
                  src="/work/2.png"
                  alt="Project 2"
                  class="w-full rounded"
                />
                <img
                  src="/work/2-detail.png"
                  alt="Project 2 Detail"
                  class="w-full rounded"
                />
              </div>
              <div class="prose max-w-none">
                <h4 class="text-xl font-semibold">Project Title</h4>
                <p>
                  Project description goes here. You can add as much detail as
                  you'd like.
                </p>
                <div class="flex gap-4 mt-4">
                  <a href="#" class="text-blue-600 hover:underline">View Live</a
                  >
                  <a href="#" class="text-blue-600 hover:underline">GitHub</a>
                </div>
              </div>
            </div>
          </template>
          <template x-if="selectedProject === 3">
            <div class="space-y-4">
              <div class="grid grid-cols-2 gap-4">
                <img
                  src="/work/3.png"
                  alt="Project 3"
                  class="w-full rounded"
                />
                <img
                  src="/work/3-detail.png"
                  alt="Project 2 Detail"
                  class="w-full rounded"
                />
              </div>
              <div class="prose max-w-none">
                <h4 class="text-xl font-semibold">Project Title</h4>
                <p>
                  Project description goes here. You can add as much detail as
                  you'd like.
                </p>
                <div class="flex gap-4 mt-4">
                  <a href="#" class="text-blue-600 hover:underline">View Live</a
                  >
                  <a href="#" class="text-blue-600 hover:underline">GitHub</a>
                </div>
              </div>
            </div>
          </template>
          <!-- Add more templates for other projects -->
        </div>
      </div>
    </div>
  </div>
</section>
