---
// BASE_URL is always '/aleclevy.com/' from astro.config.mjs
const dirtvizImage = `work/dirtviz.png`;
---

<div
  id="work"
  class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10 w-full"
>
  <div class="text-center mb-12">
    <h2 class="text-4xl md:text-5xl font-display text-white mb-4">
      Featured Projects
    </h2>
    <p class="text-xl text-gray-300 max-w-3xl mx-auto">
      A selection of my recent work showcasing full-stack development and
      problem-solving skills
    </p>
  </div>

  <!-- Projects Grid -->
  <div class="grid md:grid-cols-1 lg:grid-cols-2 gap-8 max-w-4xl mx-auto">
    <!-- DirtViz Project -->
    <div
      class="group relative glass rounded-xl overflow-hidden hover:scale-105 transition-all duration-300 border border-white/10 hover:border-tan/30"
    >
      <div
        class="aspect-video bg-gradient-to-br from-tan/10 to-orange/10 overflow-hidden"
      >
        <img
          src={dirtvizImage}
          alt="DirtViz Project"
          class="w-full h-full object-contain p-2 opacity-90 group-hover:opacity-100 transition-opacity duration-300"
        />
      </div>
      <div class="p-6">
        <h3 class="text-xl font-semibold text-white mb-2">DirtViz</h3>
        <p class="text-gray-300 mb-4">
          Hardware and software ecosystem for outdoor sensor networks, featuring
          real-time data visualization and analysis.
        </p>
        <div class="flex flex-wrap gap-2 mb-4">
          <span
            class="text-xs px-2 py-1 bg-tan/10 text-tan-light rounded border border-tan/20"
            >React</span
          >
          <span
            class="text-xs px-2 py-1 bg-tan/10 text-tan-light rounded border border-tan/20"
            >Node.js</span
          >
          <span
            class="text-xs px-2 py-1 bg-tan/10 text-tan-light rounded border border-tan/20"
            >IoT</span
          >
        </div>
        <div class="flex gap-4">
          <a
            href="https://dirtviz.jlab.ucsc.edu"
            target="_blank"
            rel="noopener noreferrer"
            class="text-orange-light hover:text-white font-medium text-sm inline-flex items-center group"
          >
            View Live
            <svg
              class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
              ></path>
            </svg>
          </a>
          <a
            href="https://github.com/jlab-sensing/ENTS-backend"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-400 hover:text-white font-medium text-sm inline-flex items-center"
          >
            GitHub
            <svg class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
              ></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
